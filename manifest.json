{
  "manifest_version": 3,
  "name": "YouTube Grid Tweaker",
  "version": "1.1",
  "description": "Customize YouTube layout, including grid size (videos per row) and video appearance and remove Shorts and Explore More sections for less distraction.",

  "icons": {
    "16": "assets/images/yotubeGrid16.png",
    "32": "assets/images/yotubeGrid32.png",
    "48": "assets/images/yotubeGrid48.png",
    "128": "assets/images/yotubeGrid128.png"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "activeTab"]
}
