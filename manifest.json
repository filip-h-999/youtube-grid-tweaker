{
  "manifest_version": 3,
  "name": "YouTube Grid Tweaker",
  "version": "1.0",
  "description": "Change number of videos per row on YouTube",

  "icons": {
    "16": "images/yotubeGrid16.png",
    "32": "images/yotubeGrid32.png",
    "48": "images/yotubeGrid48.png",
    "128": "images/yotubeGrid128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://www.youtube.com/feed/subscriptions"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab", "tabs", "storage"]
}
